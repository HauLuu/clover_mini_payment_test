<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clover.remote.client.lib.test" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.clover.remote.client.lib.test"
        android:targetPackage="com.clover.remote.client.lib.test" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />

    <application>
        <uses-library android:name="android.test.runner" />

        <service
            android:name="com.clover.remote.client.transport.usb.pos.PosUsbRemoteProtocolService"
            android:exported="true"
            android:label="CloverUSBService" >
            <intent-filter>
                <action android:name="com.clover.remote.client.transport.usb.pos.PosUsbRemoteProtocolService" />
            </intent-filter>
        </service> <!-- the receiver is required for detached, per documentation and experimentation -->
        <receiver android:name="com.clover.remote.client.transport.usb.pos.PosUsbBroadcastReceiver" >
            <intent-filter>

                <!-- <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/> -->
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"
                android:resource="@xml/device_filter" />
        </receiver> <!-- The activity is required for attached so it can prompt for permission -->
        <activity android:name="com.clover.remote.client.transport.usb.pos.UsbActivity" >
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <!-- <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/> -->
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
            <!-- <meta-data android:resource="@xml/device_filter" android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/> -->
        </activity>
    </application>

</manifest>